<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="setting">

<!-- 비밀번호 변경 -->
	<update id="pwdupdate" parameterType="empvo">
		update employee set password=#{password}
	</update>
	
<!-- 프로필 변경 -->
	<update id="profileupdate" parameterType="empvo">
		update employee set name=#{name}, tel=#{tel}, email=#{email}, address=#{address}
	</update>
</mapper>